    <!-- HERO / INTRO (same CRT band style you use for the homepage hero) -->

    <!-- <section class="crt-band section-gap">
      <div class="wrap">
        <header class="mb-8">
          <h1 class="section-header pop">Our Services</h1>
          <p class="lead text-zinc-400 max-w-3xl">
