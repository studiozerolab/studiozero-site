<!-- On-scroll style upgrade -->
<script is:inline>
  const header = document.getElementById('site-header');
  const classy = () => {
    const scrolled = window.scrollY > 8;
    header.classList.toggle('shadow', scrolled);
    const inner = header.firstElementChild;
    if (!inner) return;
    if (scrolled) {
      inner.classList.remove('bg-black/20', 'border-white/5');
      inner.classList.add('bg-black/70', 'border-white/10');
    } else {
      inner.classList.add('bg-black/20', 'border-white/5');
      inner.classList.remove('bg-black/70', 'border-white/10');
    }
  };
  classy();
  window.addEventListener('scroll', classy, { passive: true });
</script>
