---
import LaptopAutoFit from "./LaptopAutoFit.astro";

const items = [
  { title: "Restaurant Demo", desc: "Simple, modern design that's easy to update", img: "/work/willow.jpg" },
  { title: "Contractor Demo", desc: "Custom website showcasing offerings", img: "/work/vertex.jpg" },
  { title: "Portfolio Demo", desc: "Informative, professional landing page", img: "/work/jensen.jpg" },
];
---

<section id="work" class="wrap section-gap bg-crt-subtle bg-crt-dark section-pad">
  <div class="wrap">
  <h2 class="section-header pop">Design Samples</h2>

  <p class="section-descrip">
      Choose a layout that fits your business - each design is customized with your logo, colors, and content.
  </p>

  <div class="std-grid std-grid--smart std-grid--fixed">
    {items.map((it) => (
      <article class="rounded-xl border border-zinc-200 bg-white p-5 shadow-sm hover:shadow-md transition">  
        <LaptopAutoFit src={it.img} class="w-full max-w-520px mx-auto scale-125" /> {/* class="w-full max-w-520px mx-auto scale-125" */}
          <h3 class="mt-4 text-lg font-semibold text-zinc-900">{it.title}</h3>
          <p class="mt-1 text-sm text-zinc-600">{it.desc}</p>
      </article>
    ))}
  </div>
    <div class="mt-6">
      <a href="/templates"
         class="inline-flex items-center gap-1 text-sm text-zinc-600 hover:text-zinc-900 underline underline-offset-4 decoration-zinc-300 hover:decoration-zinc-500">
        See More Templates <span aria-hidden>â†’</span>
      </a>
    </div>

  </div>
</section>
