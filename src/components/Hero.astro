<script>
  // Config — tweak as you like
  const SPEED_MS = 45;       // 28 time per character
  const START_DELAY = 500;   // 250 delay before typing starts
  const KEEP_CARET = true;   // caret stays after finishing

  const el = document.getElementById('tagline-typer');
  if (el) {
    const txtEl = el.querySelector('.tw-text');
    const caretEl = el.querySelector('.tw-caret');
    const full = el.getAttribute('data-text') || '';

    // Reduced motion? Show instantly.
    const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if (prefersReduced) {
      txtEl.textContent = full;
      el.dataset.ready = 'true';
    } else {
      let i = 0;
      el.dataset.ready = 'true';
      setTimeout(() => {
        const step = () => {
          if (i <= full.length) {
            txtEl.textContent = full.slice(0, i++);
            requestAnimationFrame(() => setTimeout(step, SPEED_MS));
          } else if (!KEEP_CARET && caretEl) {
            caretEl.remove();
          }
        };
        step();
      }, START_DELAY);
    }
  }
</script>
