---
import AddOnsTeaser from '../components/AddOnsTeaser.astro';

const tiers = [
  {
    name: "Starter",
    tag: "1–3 pages",
    price: 450,
    blurb:
      "A clean, fast one-pager or microsite to get you online quickly.",
    features: [
      "Custom hero + 1–2 sections",
      "Mobile-friendly design",
      "Contact form",
      "Basic SEO setup",
      "2 rounds of edits",
    ],
    cta: { label: "Get Starter", href: "#contact" },
    learnHref: '/packages#starter',
    quickHref: '/contact?package=starter',
  },
  {
    name: "Standard",
    tag: "4–7 pages",
    price: 1100,
    featured: false, // boolean
    blurb:
      "Polished small-business site with room to grow.",
    features: [
      "Home + Services + Work + Contact",
      "Reusable components",
      "Performance budget & image optimization",
      "CMS-ready structure",
      "3 rounds of edits",
    ],
    cta: { label: "Start a Project", href: "#contact" },
    learnHref: '/packages#growth',   // or #standard if you use that id
    // quickHref: '/contact?package=growth',
  },
  {
    name: "Pro",
    tag: "custom",
    price: "Custom",
    blurb:
      "Bespoke design, integrations, or migrations.",
    features: [
      "Design system & tokens",
      "Blog/Collections or booking",
      "3rd-party integrations",
      "Accessibility pass (WCAG AA)",
      "Ongoing support options",
    ],
    cta: { label: "Book a Call", href: "#contact" },
    learnHref: '/packages#pro',
    // quickHref: '/contact?package=pro',
  },
  {
    name: "Add Ons & Stand Alone",
    // tag: "custom",
    price: "Custom",
    blurb:
      "Enhance any package with extra tools, or purchase on their own.",
    features: [
      "Professional email setup",
      "Analytics reports & insights",
      "SEO services (Google business Profilem keyword optimization)",
      "Online payments (Stripe, PayPal",
      "QR codes (static or branded)",
    ],
    cta: { label: "Book a Call", href: "#contact" },
    learnHref: '/packages#addons',
    // quickHref: '/contact?package=pro',
  },
];
---

<section id="packages" class="wrap section-gap bg-crt-subtle bg-crt-mid section-pad"> <!-- bg-white text-zinc-900 -->
  <div class="wrap">
    <h2 class="section-header pop">Packages</h2>
    <p class="section-descrip">
      Clear, practical options. Every package includes modern performance, responsive design, and friendly support.
    </p>

    <!-- panel with subtle grid like Services -->
    <!-- <div class=" rounded-2xl border border-zinc-200 mt-8 p-4 sm:p-6"> //panel-grid  article class=card-->
      <div class="std-grid std-grid--smart std-grid--fixed">
        {tiers.map((t) => (
          <article
            class={[
              "bg-white border border-gray-200 rounded-lg p-6 shadow-md",
              t.featured
                ? "border-zinc-300 shadow-sm bg-white"
                : "border-zinc-200 bg-white",
            ].join(" ")}
          >
            {/* <div class="card-body">  grow */}
            {/* <div class="mb-2 mt-0"> || p-6 sm:p-7 */}
              {/* <div class="flex items-baseline justify-between">  /* items-baseline || gap-2 */}
                {/* <h3 class="text-xl font-bold text-gray-900 leading-tight">{t.name}</h3>
                {t.tag &&
                <span class="inline-flex items-center whitespace-nowrap text-xs px-2 py-0.5 rounded-full bg-zinc-100 text-zinc-700 leading-none">
                  {t.tag}
                </span>
                }
              </div> */}
              <div class="card-head">
              <h3 class="card-title">{t.name}</h3>
              {t.tag &&
                <span class="inline-flex items-center whitespace-nowrap text-xs px-2 py-0.5 rounded-full bg-zinc-100 text-zinc-700 leading-none">
                  {t.tag}
                </span>
                }
              
              </div>

              {/* <div class="mt-3 flex items-end gap-2"> */}
              <div class="card-body">
                
                <p class="mt-2 text-2xl font-bold text-gray-900">
                  {typeof t.price === "number" ? `$${t.price}` : t.price}
                </p>
                {/* {typeof t.price === "number" && (
                  <p class="text-sm text-gray-500">flat</p>
                )} */}
              </div>

              <p class="mt-3 text-sm text-zinc-600">{t.blurb}</p>

              <ul class="mt-4 space-y-2 text-sm text-gray-600">
                {t.features.map((f) => (
                  <li class="flex gap-2">
                    <svg class="h-4 w-4 mt-0.5 text-emerald-500 shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M16.704 5.29a1 1 0 0 1 .006 1.414l-7.25 7.3a1 1 0 0 1-1.42.006L3.29 9.26A1 1 0 1 1 4.71 7.84l3.026 3.026 6.535-6.53a1 1 0 0 1 1.414-.006Z" clip-rule="evenodd"/>
                    </svg>
                    <span>{f}</span>
                  </li>
                ))}
              </ul>
              {/* <div class="mt-6 flex justify-center">
              <a
                href={t.cta.href}
                class={[
                  "mt-8 inline-flex  justify-center rounded-lg px-4 py-2 text-sm font-medium transition",
                  t.featured
                    ? "bg-black text-white hover:bg-zinc-900"
                    : "border border-zinc-300 hover:border-zinc-400 text-gray-900"
                ].join(" ")}
              >
                {t.cta.label}
              </a>
              </div> */}
            {/* </div> */}
            </div>
            <div class="card-actions"> {/* mt-6 pt-4 flex justify-center gap-3 || mt-6 pt-4 flex flex-wrap items-center gap-3 */}
              { t.quickHref &&
            <a href={t.quickHref}
               class="btn btn-black">
              Quick Start
            </a>
            }
            <a href={t.learnHref}
            class="btn btn-outline">
              Learn More
            </a>
          {/* </div> */}
          </article>
        ))}
      </div>

      <!-- small footnote -->
      <p class="mt-3 text-xs text-zinc-500">
        Prices are typical starting points and may vary based on scope. Transparent proposals—no surprises.
      </p>
      
    <!-- </div> -->
     
     <!-- Full packages button -->
    <div class="mt-6">
      <a href="/packages"
         class="inline-flex items-center gap-1 text-sm text-zinc-600 hover:border-zinc-900">
        See full Packages & Pricing <span aria-hidden>→</span>
      </a>
      
    </div>
    
  </div>
  
</section>

<style>
  /* Reuse your subtle graph paper background */
  .panel-grid {
    position: relative;
    overflow: hidden;
  }
  .panel-grid::before {
    content: "";
    position: absolute; inset: 0;
    background:
      linear-gradient(to bottom, rgba(0,0,0,.03), transparent 60%),
      url("/textures/grid-8.svg"); /* or keep your existing inline CSS grid if you prefer */
    opacity: .5;
    pointer-events: none;
  }
</style>
