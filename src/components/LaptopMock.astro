---
interface Props {
  src: string;                 // screenshot path (e.g. /work/willow.jpg)
  alt?: string;                // alt for the frame
  frame?: string;              // transparent-screen PNG (e.g. /mockups/laptop-frame.png)
  class?: string;              // width control from parent: e.g. "w-full max-w-[520px] mx-auto"
  frameW?: number;             // native frame width (px)
  frameH?: number;             // native frame height (px)
}

const {
  src,
  alt = "Website preview in a laptop frame",
  frame = "/laptop-frame.png",
  class: className = "w-full max-w-[520px] mx-auto",
  frameW = 1648,   // <-- set these to your actual PNG size if different
  frameH = 1028,
} = Astro.props;
---

<!-- Aspect-ratio wrapper keeps height correct for any width -->
<div class={`relative ${className}`} style={`aspect-ratio:${frameW}/${frameH};`}>
  <!-- Screenshot as a BACKGROUND on a masked DIV -->
  <div class="screen-mask-bg" style={`background-image:url('${src}')`} aria-hidden="true"></div>

  <!-- Frame (on top) -->
  <img
    src={frame}
    alt={alt}
    class="absolute inset-0 w-full h-full pointer-events-none select-none"
    loading="lazy"
    decoding="async"
  />
</div>
