---
const { groups = [] } = Astro.props;
---

<div class="grid gap-6 sm:grid-cols-2">
  {groups.map((g) => (
    <div class="rounded-lg border border-zinc-200 bg-white p-4">
      <h3 class="text-sm font-semibold text-zinc-900">{g.group}</h3>
      <ul class="mt-3 space-y-1 text-sm">
        {g.items.map((i) => (
          <li class="flex gap-2">
            <span class="h-1.5 w-1.5 mt-2 rounded-full bg-zinc-400"></span>
            <span class="text-zinc-700">{i}</span>
          </li>
        ))}
      </ul>
    </div>
  ))}
</div>
