---
const services = [
  {
    title: 'Web Design',
    icon: 'monitor', // (see icons below)
    blurb:
      'Clean, modern websites tailored to your brand and optimized for phones and desktops.',
    bullets: ['Fast & accessible', 'Built on best practices', 'Easy to update'],
  },
  {
    title: 'Site Redesigns',
    icon: 'refresh',
    blurb:
      'Refresh your existing site with a polished look while keeping content and SEO intact.',
    bullets: ['Keep your structure', 'Sharper visuals', 'Better UX'],
  },
  {
    title: 'Consulting & Support',
    icon: 'wrench',
    blurb:
      'Practical guidance and hands-on tweaks to keep your site running smoothly.',
    bullets: ['Hourly or monthly', 'Bug fixes & audits', 'Performance help'],
  },
];
---
<!-- section-heading  heading-heroish -->
<section id="services" class="section bump">
  <div class="wrap">
    <!-- Heading -->
    <header class="mb-8">
      <h2 class="heading-heroish">Services</h2>
      <div class="heading-rule"></div>
    </header>

    <!-- Grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {services.map((s) => (
        <article class="group card card-stroke hover:shadow-lg transition-all duration-200 bg-white">
          <!-- corner Ø motif -->
          <span
            class="absolute right-3 top-3 text-[10px] tracking-[0.2em] text-zinc-400/80
                   border border-zinc-300/70 rounded-full px-[6px] py-[2px] transition
                   group-hover:bg-zinc-900 group-hover:text-white group-hover:border-zinc-900">
            Ø
          </span>

          <div class="p-5">
            <!-- Icon -->
            <div class="crt-icon mb-4 inline-flex items-center justify-center h-12 w-12 rounded-md
                        bg-zinc-900 text-white shadow-sm">
              {s.icon === 'monitor' && (
                <svg viewBox="0 0 24 24" class="h-6 w-6">
                  <path d="M3 5h18v11H3zM8 19h8" stroke="currentColor" stroke-width="1.6" fill="none" stroke-linecap="round" />
                </svg>
              )}
              {s.icon === 'refresh' && (
                <svg viewBox="0 0 24 24" class="h-6 w-6">
                  <path d="M20 6v6h-6M4 18v-6h6M6.5 7.5A7 7 0 0 1 18 9M17.5 16.5A7 7 0 0 1 6 15"
                        stroke="currentColor" stroke-width="1.6" fill="none" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
              )}
              {s.icon === 'wrench' && (
                <svg viewBox="0 0 24 24" class="h-6 w-6">
                  <path d="M14 7a4 4 0 1 0-5.657 5.657L4 17l3 3 4.343-4.343A4 4 0 0 0 14 7z"
                        stroke="currentColor" stroke-width="1.6" fill="none" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
              )}
            </div>

            <h3 class="text-lg font-semibold text-zinc-900">{s.title}</h3>
            <p class="mt-1 text-sm text-zinc-600 leading-relaxed">{s.blurb}</p>

            <!-- hover bullets (appear on hover/focus) -->
            <ul class="mt-4 space-y-1 text-sm text-zinc-700 opacity-0 translate-y-1
                       group-hover:opacity-100 group-hover:translate-y-0
                       group-focus-within:opacity-100 group-focus-within:translate-y-0
                       transition-all duration-200">
              {s.bullets.map((b) => (
                <li class="flex items-start gap-2">
                  <span class="mt-[6px] h-[3px] w-[3px] rounded-full bg-zinc-800"></span>
                  <span>{b}</span>
                </li>
              ))}
            </ul>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
